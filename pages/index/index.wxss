/**index.wxss**/
.class-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: rgba(255, 187, 51, 0.8);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}


.class {
  width: 100rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  text-align: center;
  opacity: 0.6;
}

.head-news {
  position: relative;
  height: 400rpx;
  width: 710rpx;
  left: 20rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.head-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.head-news-title {
  display: flex;
  font-size: 36rpx;
  line-height: 47rpx;
  word-break: break-all;
  color: rgba(255, 255, 255, 1);
}

.head-news-info {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.7);
  bottom: 0;
  left: 0;
  width: 99%;
  padding-left: 10rpx;
}

.head-news-stamp {
  display: flex;
}
.head-news-time {
  font-size: 30rpx;
  line-height: 46rpx;
  color: rgba(255, 255, 255, 0.7);
}
.head-news-source {
  font-size: 30rpx;
  line-height: 46rpx;
  color: rgba(255, 255, 255, 0.7);
  padding-left: 20rpx;
}

.news-item {
  display: flex;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
 
}

.item-left-wrapper {
  position: relative;
  width: 500rpx;
  padding-left: 20rpx;
  
}

.item-title {
  padding-top: 20rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.9;
}
.item-info {
  display: flex;
  position: absolute;
  bottom: 0;
  padding-bottom: 20rpx;
}

.item-time {
  font-size: 25rpx;
  line-height: 35rpx;
  color: rgba(0, 0, 0, 0.6);
}
.item-source {
  font-size: 25rpx;
  line-height: 35rpx;
  padding-left: 20rpx;
  color: rgba(0, 0, 0, 0.6);
}

.item-image {
  height: 160rpx;
  width: 250rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-right: 30rpx;
  padding-left: 20rpx;
}